<div class="container mx-auto py-12" data-logos-root>
  {{#if fields.title}}
    <div class="w-full">
      <h2 class="text-3xl font-semibold">{{fields.title}}</h2>
    </div>
  {{/if}}

  {{#if fields.subtitle}}
    <p class="mt-3 text-lg leading-6 text-muted-text max-w-3xl">
      {{fields.subtitle}}
    </p>
  {{/if}}

  <div
    class="mt-8"
    data-logos-grid
    style="
      display: grid;
      grid-template-columns: repeat({{fields.columnsMobile}}, minmax(0, 1fr));
      gap: {{fields.gap}}px;
      align-items: center;
    "
  >
    {{#each fields.logos}}
      <div class="flex items-center justify-center" data-logos-item>
        {{#if href}}
          <a href="{{href}}" class="block" data-logos-link aria-label="{{alt}}">
            <img
              src="{{src}}"
              alt="{{alt}}"
              loading="lazy"
              decoding="async"
              class="max-h-64 w-auto"
              data-logos-img
            />
          </a>
        {{else}}
          <img
            src="{{src}}"
            alt="{{alt}}"
            loading="lazy"
            decoding="async"
            class="max-h-64 w-auto"
            data-logos-img
          />
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>