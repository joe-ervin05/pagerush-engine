<div
  class="container mx-auto py-12"
  data-services-root
  data-cols="{{fields.columnsDesktop}}"
  data-style="{{fields.cardStyle}}"
>
  {{#if fields.title}}
    <div class="w-full">
      <h2 class="text-3xl font-semibold">{{fields.title}}</h2>
    </div>
  {{/if}}

  {{#if fields.subtitle}}
    <p
      class="mt-3 max-w-3xl whitespace-pre-line text-lg leading-6 text-muted-text"
    >
      {{fields.subtitle}}
    </p>
  {{/if}}

  <div class="mt-8" data-services-grid>
    {{#each fields.services}}
      <article data-service-card>
        <div data-service-inner>
          {{#if (and icon (neq icon "none"))}}
            <div data-service-icon aria-hidden="true">
              {{{icon icon size=20 class="block"}}}
            </div>
          {{/if}}

          <h3 class="text-xl font-semibold" data-service-title>{{title}}</h3>

          {{#if description}}
            <p
              class="mt-2 whitespace-pre-line text-lg leading-6 text-muted-text"
              data-service-desc
            >
              {{description}}
            </p>
          {{/if}}

          {{#if (and ctaLabel ctaHref)}}
            <div data-service-cta-wrap>
              <a
                href="{{ctaHref}}"
                class="inline-flex items-center gap-2 text-base font-medium"
                data-service-cta
              >
                <span>{{ctaLabel}}</span>
                <span aria-hidden="true">â†’</span>
              </a>
            </div>
          {{/if}}
        </div>
      </article>
    {{/each}}
  </div>
</div>