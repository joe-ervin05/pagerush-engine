<div class="container mx-auto py-12" data-reviews-root>
  {{#if fields.title}}
    <div class="w-full">
      <h2 class="text-3xl font-semibold">{{fields.title}}</h2>
    </div>
  {{/if}}

  {{#if fields.subtitle}}
    <p class="text-lg text-muted-text max-w-3xl">
      {{fields.subtitle}}
    </p>
  {{/if}}

  <div class="mt-6" data-reviews-grid data-cols="{{fields.columnsDesktop}}">
    {{#each fields.reviews}}
      <figure class="rounded-lg border border-border bg-surface p-6" data-review-card>
        {{#if ../fields.showStars}}
          <div class="text-sm" aria-label="Rating {{rating}} out of 5">
            <span aria-hidden="true" data-stars data-rating="{{rating}}">★★★★★</span>
          </div>
        {{/if}}

        <blockquote class="mt-3 text-lg leading-7 text-foreground">
          <p class="whitespace-pre-line">“{{quote}}”</p>
        </blockquote>

        <figcaption class="mt-5 flex items-center gap-3">
          {{#if avatar}}
            <img
              src="{{avatar}}"
              alt=""
              class="h-10 w-10 rounded-full object-cover"
              loading="lazy"
              decoding="async"
            />
          {{/if}}

          <div>
            <div class="text-base font-medium">{{name}}</div>
            {{#if role}}
              <div class="text-sm text-muted-text">{{role}}</div>
            {{/if}}
          </div>
        </figcaption>
      </figure>
    {{/each}}
  </div>
</div>
